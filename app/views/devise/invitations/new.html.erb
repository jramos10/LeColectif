<h2 class="invite-a-friend"><%= t "devise.invitations.new.header" %></h2>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
    <%= devise_error_messages! %>

    <% resource.class.invite_key_fields.each do |field| -%>
        <p class="email" placeholder="example@example.com">
          <br/>
          <%= f.text_field field, :placeholder => 'yourfriend@example.com'%> </p>
    <% end -%>

    <p><%= f.submit t("devise.invitations.new.submit_button"), :class => 'send-invitation' %></p>
<% end %>
