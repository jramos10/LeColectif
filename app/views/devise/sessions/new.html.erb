<link rel="stylesheet" type="text/css" href="invite_user.css" media="screen"/>

<div class="user-forms">
  <h2 class="header">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, :placeholder => 'Enter Email' %>
      <%= f.password_field :password, autocomplete: "off", :placeholder => 'Enter Password' %>
      <div class="submit-button"><%= f.submit "Submit" %></div>
      <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
<% end -%>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
